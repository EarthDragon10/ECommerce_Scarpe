@model IEnumerable<ECommerce_Scarpe.Models.Prodotto>

@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <div class="row ">

        @foreach (ECommerce_Scarpe.Models.Prodotto item in Model)
        {
            <div class="col-md-4 m-3">
                <div class="card" style="width: 18rem;">
                    <img src="..." class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@item.Nome</h5>
                        <p class="card-text">@item.Descrizione</p>
                        <p><span>@item.Prezzo.ToString("c2")</span><span>@item.ControlloVendita</span></p>
                        @Html.ActionLink("Dettaglio Scarpa", "DetailsProduct", new { id = @item.IdProdotto})
                        <input type="submit" class="btn btn-success" name="name" value="Invia" />
                    </div>
                </div>
            </div>
        }

    </div>
</div>